<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg_selector"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_margin_10"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="@dimen/common_margin_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="靳小美"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/customer_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:src="@mipmap/girl_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/customer_county_agency"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle_orange_bg"
                android:gravity="center"
                android:text="县"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/customer_agent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/circle_blue_bg"
                android:gravity="center"
                android:text="经"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="132321321313"
                android:textColor="@color/deep_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/customer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-09-19 1415"
                android:textColor="@color/deep_black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>